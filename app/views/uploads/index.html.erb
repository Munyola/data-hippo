<h1>Listing uploads</h1>

<table>
  <tr>
    <th>Email address</th>
    <th>Name</th>
    <th>Note</th>
    <th>Confirm</th>
    <th>File</th>
    <th>Local filename</th>
    <th>Expire date</th>
    <th>Password</th>
    <th>Salt</th>
    <th>File size</th>
    <th>Downloads count</th>
    <th>Md5 digest</th>
  </tr>

<% for upload in @uploads %>
  <tr>
    <td><%=h upload.email_address %></td>
    <td><%=h upload.name %></td>
    <td><%=h upload.note %></td>
    <td><%=h upload.confirm %></td>
    <td><%=h upload.file %></td>
    <td><%=h upload.local_filename %></td>
    <td><%=h upload.expire_date %></td>
    <td><%=h upload.password %></td>
    <td><%=h upload.salt %></td>
    <td><%=h upload.file_size %></td>
    <td><%=h upload.downloads_count %></td>
    <td><%=h upload.md5_digest %></td>
    <td><%= link_to 'Show', upload %></td>
    <td><%= link_to 'Edit', edit_upload_path(upload) %></td>
    <td><%= link_to 'Destroy', upload, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

